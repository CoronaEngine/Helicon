{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 0,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_STANDARD": "11",
                "CMAKE_C_STANDARD_REQUIRED": "ON",
                "CMAKE_C_EXTENSIONS": "ON",
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_CXX_EXTENSIONS": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "win-base",
            "inherits": "base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "ninja-mc",
            "inherits": "win-base",
            "displayName": "Ninja Multi-Config",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "RelWithDebInfo;MinSizeRel"
            }
        },
        {
            "name": "vs2022",
            "inherits": "win-base",
            "displayName": "Visual Studio 2022",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "RelWithDebInfo;MinSizeRel"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ninja-rdi",
            "displayName": "Build Ninja (RelWithDebInfo)",
            "configurePreset": "ninja-mc",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "ninja-msr",
            "displayName": "Build Ninja (MinSizeRel)",
            "configurePreset": "ninja-mc",
            "configuration": "MinSizeRel"
        },
        {
            "name": "vs-rdi",
            "displayName": "Build VS (RelWithDebInfo)",
            "configurePreset": "vs2022",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "vs-msr",
            "displayName": "Build VS (MinSizeRel)",
            "configurePreset": "vs2022",
            "configuration": "MinSizeRel"
        }
    ],
    "testPresets": []
}